<div class="card post-list" style="width: 20rem;">
  <div class="card-block single">
    <h4 class="card-title"><%= link_to post.title, post %></h4>
    <p class="card-publish"><%= post.published_date %></p>
    <p class="card-text"><%= post.description %></p>
    <%= link_to 'see post', post, class: 'card-link' %>
  </div>
</div>
